@model IEnumerable<WebMVC2.Models.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center">Listagem Clientes</h2>

<table class="table" style="margin: 0px">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RG)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstadoCivil)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CPF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RG)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.DataNascimento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sexo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstadoCivil)
        </td>
       
        <td>
            <a href="@Url.Action($"Edit/{item.IdCliente}", "Clientes")">
                <i class="fas fa-edit"></i>
            </a> |
            <a href="@Url.Action($"Details/{item.IdCliente}", "Clientes")">
                <i class="fas fa-eye"></i>
            </a> |
            <a href="@Url.Action($"Delete/{item.IdCliente}", "Clientes")">
                <i class="fas fa-trash-alt"></i>
            </a> 
        </td>
    </tr>
}

</table>
